<!--pages/user/user-info/user-info.wxml-->
<wxs module="utils" src="./user-info.wxs"></wxs>

<view class="userinfo-container">
  <view class="userinfo-box">
    <view class="user-avatar">
      <image wx-if="{{avatarImg}}" src="{{avatarImg}}" mode="scaleToFill"></image>
      <open-data wx:else type="userAvatarUrl" ></open-data>
      
    </view>
    <view class="fun-btn">
      <debounce-button type="primary" customStyle="border-radius:10rpx;height:60rpx" bind:debouncetap="selectAvatar" >更换头像</debounce-button>
      <debounce-button type="info" customStyle="border-radius:10rpx;height:60rpx" bind:debouncetap="changePassword" >更换密码</debounce-button>
    </view>
  </view>
  <van-cell-group>
    <van-field
      value="{{ list.name }}"
      left-icon="friends-o"
      clearable
      label="姓名"
      placeholder="姓名"
      disabled="{{true}}"
    />

    <van-field
      value="{{ list.userName }}"
      left-icon="cluster-o"
      label="学号"
      placeholder="学号"
      clearable
      disabled="{{true}}"
    />
    <van-field
      value="{{ list.phone }}"
      left-icon="phone-o"
      label="联系方式"
      placeholder="联系方式"
      clearable
      disabled="{{true}}"
    />
    
    <van-field
      value="{{ list.grade }}"
      left-icon="discount"
      label="年级"
      placeholder="年级"
      readonly
      
      disabled="{{true}}"
    />
    <van-field
      value="{{ list.college }}"
      left-icon="newspaper-o"
      label="学院"
      placeholder="学院"
      readonly
      disabled="{{true}}"
    />
    <van-field
      value="{{ list.identity }}"
      left-icon="label-o"
      label="身份"
      placeholder="身份"
      clearable
      disabled="{{true}}"
    />
  </van-cell-group>
  <!-- <view class="btn-box">
    <debounce-button 
    customStyle="width:100%;margin:10rpx 0; border-radius: 20rpx" bind:debouncetap="editAndSave" 
    type="{{btnTypeInfo}}" 
    isLoading="{{btnLoading}}"
    >
      {{editText}}
    </debounce-button>
  </view> -->
  <van-notify id="van-notify" />
  <view style="color: #868e96;text-align: right;margin: 20rpx 10rpx;font-size: 28rpx;">若信息有误，请联系管理员或老师修改</view>
  <!-- 退出登录按钮 -->
  <view style="width: 80%; margin: 0 auto;">
    <debounce-button type="danger" customStyle="width:100%;border-radius:10rpx;margin-top:20rpx" bind:debouncetap="handleLoginout">退出登录</debounce-button>
  </view>


  <!-- 更换密码 -->
  <van-dialog
    use-slot
    title="更换密码"
    show="{{ dialogShow }}"
    show-cancel-button
    bind:close="onClose"
    bind:confirm="fixedPassword"
  >
    <van-cell-group>
      <van-field
        model:value="{{ prePassword }}"
        type="password"
        required
        clearable
        label="旧密码"
        placeholder="请输入密码"
      />

      <van-field
        model:value="{{ newPassword }}"
        type="password"
        clearable
        label="新密码"
        placeholder="包含数字和英文，长度6-20"
        required
      />
      <van-field
        model:value="{{ rePassword }}"
        clearable
        type="password"
        label="确认密码"
        placeholder="请确认密码"
        error-message="{{utils.showErrMessage(newPassword,rePassword)}}"
        required
      />
    </van-cell-group>
  </van-dialog>
</view>


