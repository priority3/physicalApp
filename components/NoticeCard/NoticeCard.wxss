@import './state-tag.wxss';
/* components/physicalCard/physicalCard.wxss */

.notice-card-container{
  width: 100%;
  height: 200rpx;
  margin: 20rpx auto;
  background-color:#fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,.15);
}
.notice-card-title{
  margin-left: 50rpx;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-family:Verdana, Geneva, Tahoma, sans-serif;
  color: #c4c4c4;
}
.approve-res{
  font-size: 35rpx;
  font-weight: 650;
}

.notice-card-btn{
  margin-right: 50rpx;
}










